<!--components/swiper/swiper.wxml-->
<swiper class="swiper" 
        autoplay
        duration="300"
        interval="2000"
        circular
        indicator-dots
        indicator-active-color = "#ff5777" >
  <block wx:for="{{ list }}" wx:key = "index">
    <swiper-item class="swiper-item"> 
      <image src="{{ item.image }}" mode="widthFix" class="swiper-img"/>
    </swiper-item>
  </block>
</swiper>
